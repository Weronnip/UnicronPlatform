<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UnicronPlatform.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="UnicronPlatform.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        Background="Transparent"
        Title="Unicron Platform"
        Icon="/Assets/avalonia-logo.ico"
        Width="800"
        Height="450">
    
    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.20" />
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Spacing="20">

            <TextBlock Text="Unicron Platform"
                       FontSize="30"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Добро пожаловать на цифровую обучающую платформу!"
                       FontSize="16"
                       Foreground="#FFCFCFCF"
                       HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Spacing="20">
                
                <Button Command="{Binding RegisterCommand}"
                        Padding="20,10"
                        Background="#FF3A3A3A"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <PathIcon Data="{StaticResource person_add_regular}"
                                  Width="16" Height="16" Foreground="White"/>
                        <TextBlock Text="Регистрация"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding LoginCommand}"
                        Padding="20,10"
                        Background="#FF3A3A3A"
                        Foreground="White"
                        BorderBrush="Transparent"
                        CornerRadius="6">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <PathIcon Data="{StaticResource person_regular}"
                                  Width="16" Height="16" Foreground="White"/>
                        <TextBlock Text="Войти"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
