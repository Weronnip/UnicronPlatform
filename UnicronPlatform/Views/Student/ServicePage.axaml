<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:UnicronPlatform.ViewModels"
             xmlns:local="clr-namespace:UnicronPlatform.ViewModels"
             d:DesignWidth="1240"
             d:DesignHeight="784"
             x:Class="UnicronPlatform.Views.Student.ServicePage"
             x:DataType="vm:ServicePageViewModel">
    <Grid>
        <ExperimentalAcrylicBorder Grid.Column="0" IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.6"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" HorizontalAlignment="Center" Margin="0 10">
            <TextBlock Text="{Binding UrlPathSegment}" 
                       FontSize="22" 
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0 10"/>

            <TextBlock Text="Тарифы"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#C8EAC6"
                       Margin="0 10"/>

            <Border Width="1220" Height="340">
                <ItemsControl ItemsSource="{Binding PlansList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="local:PlanDto">
                            <Border Width="220" Height="330" Margin="10" CornerRadius="12">
                                <Border.Background>
                                    <ImageBrush Source="../../Assets/wrapper.jpg"
                                                Stretch="UniformToFill"/>
                                </Border.Background>

                                <StackPanel Margin="10" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}" 
                                               TextAlignment="Center" 
                                               Foreground="White"
                                               FontWeight="Bold"
                                               FontSize="18"
                                               TextWrapping="Wrap" />

                                    <TextBlock Text="{Binding Description}" 
                                               TextAlignment="Left"
                                               Foreground="White"
                                               FontSize="14"
                                               Margin="0,10,0,0"
                                               TextWrapping="Wrap"
                                               MaxWidth="200"/>

                                    <TextBlock Text="{Binding Duration}" 
                                               TextAlignment="Center"
                                               Foreground="White"
                                               FontSize="14"
                                               Margin="0,10,0,0"
                                               TextWrapping="Wrap"/>

                                    <Button Content="{Binding Price, StringFormat='Купить {0}'}" 
                                            Padding="20 10"
                                            Margin="0 10"
                                            CornerRadius="10"
                                            HorizontalAlignment="Center"
                                            Background="#50544F" Foreground="#C8EAC6"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <Separator Margin="0 20"
                       Background="#4A4A4A"
                       Height="2"
                       Width="1220"/>

            <TextBlock Text="Курсы"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="#C8EAC6"
                       Margin="0 5"/>

            <Border Width="1220" Height="260">
                <ItemsControl ItemsSource="{Binding CoursesList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="3"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
            
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="local:CoursesDto">
                            <Border Margin="20 10"
                                    Background="#353535"
                                    CornerRadius="12"
                                    Width="420"
                                    Height="170"
                                    Padding="10 0">
                                <Grid ColumnDefinitions="Auto,*" Margin="20 20">
                                    <Border Width="70" Height="70"
                                            Background="#D3D3D3"
                                            CornerRadius="8"
                                            VerticalAlignment="Top"
                                            Margin="0,0,30,0"/>

                                    <StackPanel Grid.Column="1" HorizontalAlignment="Center"
                                                Margin="10">
                                        <TextBlock Text="{Binding Title}"
                                                   FontWeight="Bold"
                                                   FontSize="16"
                                                   Margin="0 0 0 20"
                                                   Foreground="White"/>

                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="13"
                                                   Foreground="White"
                                                   TextWrapping="Wrap"
                                                   MaxHeight="60"
                                                   Margin="0,4,0,0"/>

                                        <TextBlock Text="{Binding Author}"
                                                   FontSize="12"
                                                   Foreground="White"
                                                   Margin="0,8,0,0"/>

                                        <Button Content="{Binding Price, StringFormat='Купить {0}'}"
                                                Padding="12 6"
                                                Margin="0,8,0,0"
                                                HorizontalAlignment="Left"
                                                Background="#50544F"
                                                Foreground="#C8EAC6"
                                                CornerRadius="6"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="⟵ Назад" 
                        Command="{Binding PreviousPageCommand}" 
                        IsEnabled="{Binding CurrentPage}"
                        Margin="5"/>
    
                <TextBlock Text="{Binding CurrentPage}" 
                           VerticalAlignment="Center"
                           Foreground="White"
                           FontSize="16"
                           Margin="10"/>

                <Button Content="Вперёд ⟶" 
                        Command="{Binding NextPageCommand}" 
                        IsEnabled="{Binding CurrentPage, 
                        ConverterParameter={Binding TotalPages}}" 
                        Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
