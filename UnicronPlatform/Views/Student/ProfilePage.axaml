<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:UnicronPlatform.ViewModels"
        xmlns:views="clr-namespace:UnicronPlatform.Views"
        mc:Ignorable="d" d:DesignWidth="1440" d:DesignHeight="784"
        x:DataType="vm:ProfilePageViewModel"
        x:Class="UnicronPlatform.Views.ProfilePage"
        Title="Unicron Platform"
        WindowState="Maximized">

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="Foreground" Value="#d8ffbf"/>
        </Style>
    </Window.Styles>

    <Grid>
        <ExperimentalAcrylicBorder Grid.Column="1" IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="1"
                    MaterialOpacity="0.6"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <views:Sidebar Grid.Column="0" Margin="0"/>

        <StackPanel Grid.Column="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Top"
                    Margin="0  20  700 0">
            
            <TextBlock Text="Ваш профиль" 
                       FontSize="32" 
                       FontWeight="Bold"
                       Foreground="White"/>
            <Panel Margin="0 40 ">
                <Border Width="150" Height="150"
                        CornerRadius="100"
                        Margin="0 0 320 40"
                        ClipToBounds="True">
                    <Image Width="150" Height="150" 
                           Source="../Assets/default_avatart.jpg" 
                           Stretch="UniformToFill"/>
                </Border>

                <TextBlock Text="{Binding full_name}" 
                           Margin="0 20"
                           FontSize="28"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"/>
    
                <TextBlock Margin="100 70 0 0"
                           FontSize="20" 
                           HorizontalAlignment="Center">
                    <Run Text="Почта: "/>
                    <Run Text="{Binding email}"/>
                </TextBlock>
    
                <TextBlock Margin="140 100 0 0"
                           FontSize="20" 
                           HorizontalAlignment="Center">
                    <Run Text="Телефон: "/>
                    <Run Text="{Binding phone}"/>
                </TextBlock>
            </Panel>
        </StackPanel>
    </Grid>
</Window>
