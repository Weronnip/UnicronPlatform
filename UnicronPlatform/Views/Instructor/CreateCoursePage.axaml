<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:UnicronPlatform.ViewModels"
             d:DesignWidth="1240"
             d:DesignHeight="680"
             x:Class="UnicronPlatform.Views.Instructor.CreateCoursePage"
             x:DataType="vm:CreateCoursePageViewModel">
    <Grid>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="0.8"
                    MaterialOpacity="0.6"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        
        <Border Margin="30" Background="#33000000" CornerRadius="20" Padding="30">
            <StackPanel>
                <TextBlock Text="Новый курс" 
                           Foreground="White" 
                           FontSize="28" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
                           
                <TextBlock Text="Заголовок:" 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,5"/>
                <TextBox Width="400"
                         Background="#22000000"
                         Foreground="White"
                         Text="{Binding title}"
                         Watermark="Введите заголовок курса"
                         Margin="0,0,0,15"/>
                         
                <TextBlock Text="Описание:" 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,5"/>
                <TextBox Width="400"
                         Height="100"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         Background="#22000000"
                         Foreground="White"
                         Text="{Binding description}"
                         Watermark="Введите описание курса"
                         Margin="0,0,0,10"/>
                
                <TextBlock Text="Цена:" 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,5"/>
                <NumericUpDown Width="400"
                               Background="#22000000"
                               Foreground="White"
                               Watermark="Введите цену курса"
                               Text="{Binding price}"
                               Margin="0,0,0,10"/>
                         
                <TextBlock Text="Количество уроков:" 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,5"/>
                <NumericUpDown Width="400"
                               FormatString="0"
                               Background="#22000000"
                               Foreground="White"
                               Value="{Binding total_lessons}" 
                               Margin="0,0,0,10"/>
                         
                <TextBlock Text="Всего контрольных точек:" 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,5"/>
                <NumericUpDown Width="400"
                               FormatString="0"
                               Background="#22000000"
                               Foreground="White"
                               Value="{Binding control_point}" 
                               Margin="0,0,0,20"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Отмена" Margin="0,10,10,0" Padding="10,5"/>
                    <Button Content="Создать" Margin="0,10,0,0" 
                            Padding="10,5" Command="{Binding CreateCourseCommand}"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
