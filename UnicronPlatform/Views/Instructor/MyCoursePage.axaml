<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:UnicronPlatform.ViewModels"
    x:Class="UnicronPlatform.Views.Instructor.MyCoursePage"
    x:DataType="vm:MyCoursePageViewModel"
    d:DesignWidth="1240" d:DesignHeight="784">

  <Grid>
    <ExperimentalAcrylicBorder IsHitTestVisible="False">
      <ExperimentalAcrylicBorder.Material>
        <ExperimentalAcrylicMaterial
          BackgroundSource="Digger"
          TintColor="Black"
          TintOpacity="0.8"
          MaterialOpacity="0.6"/>
      </ExperimentalAcrylicBorder.Material>
    </ExperimentalAcrylicBorder>

    <StackPanel Margin="20">
      <TextBlock
        TextAlignment="Center"
        FontSize="26"
        FontWeight="Bold"
        Padding="10"
        Text="{Binding UrlPathSegment}" />

      <ScrollViewer VerticalScrollBarVisibility="Auto" 
                    HorizontalAlignment="Center" Margin="0,20,0,0">
        <ItemsControl ItemsSource="{Binding MyCourses}">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <WrapPanel Orientation="Horizontal" ItemWidth="450" ItemHeight="150" />
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <Border Background="#33000000"
                      CornerRadius="20"
                      Padding="30,10"
                      Margin="10">
                <StackPanel Width="300" Height="90">
                  
                  <TextBlock
                    Text="{Binding title}"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="16"/>
                  
                  <TextBlock
                    Text="{Binding description}"
                    Foreground="White"
                    TextWrapping="Wrap"
                    FontSize="14"/>
                </StackPanel>
              </Border>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
      </ScrollViewer>

      <StackPanel Orientation="Horizontal"
                  HorizontalAlignment="Center"
                  Margin="0,20,0,0"
                  Spacing="10">
        <Button Content="← Назад"
                Command="{Binding PrevPageCommand}"
                IsEnabled="{Binding CanGoPrev}" />

        <TextBlock Text="{Binding CurrentPage}" FontSize="16" VerticalAlignment="Center"/>
        <TextBlock Text="/" FontSize="16" VerticalAlignment="Center"/>
        <TextBlock Text="{Binding TotalPages}" FontSize="16" VerticalAlignment="Center"/>

        <Button Content="Вперёд →"
                Command="{Binding NextPageCommand}"
                IsEnabled="{Binding CanGoNext}" />
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
