<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:UnicronPlatform.ViewModels"
             d:DesignWidth="1240" d:DesignHeight="784"
             x:Class="UnicronPlatform.Views.Instructor.MyCoursePage"
             x:DataType="vm:MyCoursePageViewModel">
    <Grid>
        <ExperimentalAcrylicBorder IsHitTestVisible="False">
            <ExperimentalAcrylicBorder.Material>
                <ExperimentalAcrylicMaterial
                    BackgroundSource="Digger"
                    TintColor="Black"
                    TintOpacity="0.8"
                    MaterialOpacity="0.6"/>
            </ExperimentalAcrylicBorder.Material>
        </ExperimentalAcrylicBorder>
        <StackPanel Margin="20">
            <TextBlock TextAlignment="Center" Text="{Binding UrlPathSegment}"/>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Border Grid.Row="1" Grid.Column="0" Background="#33000000" 
                        CornerRadius="20" Padding="0 10">
                    <StackPanel Width="400" Height="90">
                        <TextBlock Text="Тестовый программный" 
                                   TextAlignment="Left" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Margin="0 20" Text="Какое-то описание курса"
                                   TextAlignment="Left" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Grid.Row="1" Margin="40 0" Grid.Column="1" Background="#33000000" 
                        CornerRadius="20" Padding="30 10">
                    <StackPanel Width="300" Height="90">
                        <TextBlock Text="{Binding TitleCourse}" 
                                   TextAlignment="Left" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding DescriptionCourse}"
                                   TextAlignment="Left" Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
